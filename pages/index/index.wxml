<!--index.wxml--> 
<view class="picker">
<text class="arrow">⇀</text>
  <picker class="from-picker" bindchange="bindStartChange" value="{{index1}}" range="{{location}}">
            <view class="place-select">{{location[index1]}} ▾</view>
  </picker> 
  
  <picker class="to-picker" bindchange="bindEndChange" value="{{index2}}" range="{{location}}">
            <view class="place-select">{{location[index2]}} ▾</view>
  </picker>  
</view> 

<view class="swiper-tab">  
    <view class="swiper-tab-list {{currentTab==0 ? 'on' : ''}}" data-current="0" bindtap="swichNav">全部</view>
    <view class="swiper-tab-list {{currentTab==1 ? 'on' : ''}}" data-current="1" bindtap="swichNav">车找人</view>
    <view class="swiper-tab-list {{currentTab==2 ? 'on' : ''}}" data-current="2" bindtap="swichNav">人找车</view> 
    <view class="swiper-tab-list {{currentTab==3 ? 'on' : ''}}" data-current="3" bindtap="swichNav">
      <picker mode="date" value="{{da}}" start="{{curdate}}" end="2017-8-20" bindchange="bindDateChange" style="color: #A61203">
        <view class="date-select">{{da}}</view>
      </picker>
    </view>
</view> 

<scroll-view class="bot" scroll-y = true>
  <view class="card" wx:for="{{items}}">
    <view class="place">
      <view class="title">
        <text class="shifa">{{item.qidian}} ➔ {{item.zhongdian}}</text>
      </view>
      <view class="time" style="padding-top:10px;">
        <text>出发时间：{{item.date}} {{item.time}}</text>
        <button class="wechat-copy" bindtap="copyWechat">复制微信号</button>
      </view>
      <view class="mode" style="padding-top:10px;">
        <text selectable="true">微信号：{{item.wechat}}</text>
      </view>
      <view class="type">
        <text>{{item.usertype}}/{{item.mode}}/{{item.seat}}</text>
        <button class="call" bindtap="callmeTap">拨打电话</button>
      </view>
      <view class="people">
        <image class="gender" src="/images/male.png"></image>
        <text>{{item.name}} {{item.phone}}</text>
      </view>
    </view>
    <view class="divide">
</view>
  </view>
  </scroll-view>