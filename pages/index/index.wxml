<!--index.wxml-->  
<view class="swiper-tab">  
    <view class="swiper-tab-list {{currentTab==0 ? 'on' : ''}}" data-current="0" bindtap="swichNav">全部</view>
    <view class="swiper-tab-list {{currentTab==1 ? 'on' : ''}}" data-current="1" bindtap="swichNav">车找人</view>
    <view class="swiper-tab-list {{currentTab==2 ? 'on' : ''}}" data-current="2" bindtap="swichNav">人找车</view> 
    <view class="swiper-tab-list {{currentTab==3 ? 'on' : ''}}" data-current="3" bindtap="swichNav">筛选</view>
</view> 

  <view class="card" wx:for="{{items}}">
    <view class="place">
      <view class="title">
        <text class="shifa">{{item.qidian}} ➔ {{item.zhongdian}}</text>
      </view>
      <view class="time " style="padding-top:10px;">
        <text>出发：{{item.date}} {{item.time}}</text>
      </view>
      <view class="type">
        <text>{{item.usertype}}/空位:{{item.seat}}</text>
      </view>
    </view>
        <view class="divider">
      _________________________________________________
    </view>
  </view>