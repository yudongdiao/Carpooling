  bottom: 15rpx;
  font-size: 35rpx;
}
.picker{
  background-color:#A61203;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 50rpx;
  box-sizing: border-box;
  z-index: 100;
}
.arrow{
  color:white;
  margin-bottom:30rpx;
  padding-left:50%;
}
.swiper-tab{ 
  width: 100%;  
  border-bottom: 2rpx solid #777777;  
  text-align: center;  
  line-height: 65rpx;
  position: fixed;
  top: 50rpx;
  left: 0;
  height: 70rpx;
  background-color: #fff;
  box-sizing: border-box;
  z-index: 100;
} 
.swiper-tab-list{  font-size: 30rpx;  
    display: inline-block;  
    width: 25%;  
    color: #777777;  
}  
.on{ color: #A61203;  
    border-bottom: 5rpx solid #A61203;}  
  
.swiper-box{ display: block; height: 100%; width: 100%; overflow: hidden; }  
.swiper-box view{  
    text-align: center;  
}  

